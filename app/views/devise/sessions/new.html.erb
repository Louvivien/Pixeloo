<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-container">
    <p class="devise-title">Se connecter</p>
    <div class="row">
        <div class="col-lg-6">
            <div class="text-form">
                <div class="form-group">
                  <div class="field">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :placeholder => "Email" %>
                  </div>
                </div>

                <div class="form-group">
                  <div class="field">
                    <%= f.password_field :password, autocomplete: "current-password", :class => "form-control", :placeholder => "Mot de passe" %>
                  </div>
                </div>

                <% if devise_mapping.rememberable? -%>
                  <div class="form-group">
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :se_souvenir_de_moi %>
                    </div>
                  </div>
                <% end -%>
                <%= render "devise/shared/links" %>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="actions">
              <%= f.submit "Se connecter", :class => "devise-btn" %>
            </div>
          <% end %>
        </div>
    </div>
</div>
