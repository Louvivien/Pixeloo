<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<div class="form-container">
    <p class="devise-title">Créer un compte</p>
    <div class="row">
        <div class="col-lg-6">
            <div class="text-form">
                <div class="form-group">
                  <div class="field">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control", :placeholder => "Email" %>
                  </div>
                </div>

                <div class="form-group">
                  <div class="field">
                    <% if @minimum_password_length %>
                    <% end %>
                    <%= f.password_field :password, autocomplete: "new-password", :class => "form-control", :placeholder => "Mot de passe (6 caractères minimum)" %>
                  </div>
                </div>

                <div class="form-group">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control", :placeholder => "Confirmation mot de passe" %>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="actions">
              <%= f.submit "S'inscrire", :class => "devise-btn" %>
            </div>
            <% end %>
        </div>
    </div>
</div>